
<button class="btn btn-primary" id="add-person">Add Person</button>
<table class="table table-bordered table-hover table-striped">
    <thead>
        <tr>
            <td>First Name</td>
            <td>Last Name</td>
            <td>Age</td>
            <td>Edit</td>
            <td>Delete</td>
        </tr>
    </thead>
    <tbody>
    </tbody>
</table>

<div class="modal fade" id="add-modal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 id="modaltitle" class="modal-title">Add Person</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="bg-light p-5 rounded-3">
                    <div class="col-md-12">
                        <label class="form-label">First Name</label>
                        <input id="firstName" type="text" placeholder="First Name" class="form-control" />
                    </div>
                    <div class="col-md-12">
                        <label class="form-label">Last Name</label>
                        <input id="lastName" type="text" placeholder="Last Name" class="form-control" />
                    </div>
                    <div class="col-md-12">
                        <label class="form-label">Age</label>
                        <input id="age" type="text" placeholder="Age" class="form-control" />
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button name="contributorId" class="btn btn-primary" id="save-person">Save</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="edit-modal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 id="modaltitle" class="modal-title">Edit Person</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="bg-light p-5 rounded-3">
                    <div>
                        <input type="hidden" id="id" />
                    </div>
                    <div class="col-md-12">
                        <label class="form-label">First Name</label>
                        <input id="firstName" type="text" placeholder="First Name" class="form-control" />
                    </div>
                    <div class="col-md-12">
                        <label class="form-label">Last Name</label>
                        <input id="lastName" type="text" placeholder="Last Name" class="form-control" />
                    </div>
                    <div class="col-md-12">
                        <label class="form-label">Age</label>
                        <input id="age" type="text" placeholder="Age" class="form-control" />
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button name="contributorId" class="btn btn-primary" id="save-person">Save</button>
            </div>
        </div>
    </div>
</div>

